<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greys"
    android:backgroundTint="@color/greys"
    android:padding="8dp">

    <TextView
        android:id="@+id/wlcm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="40dp"
        android:text="اللغة"
        android:textColor="@color/dark_grey"
        android:textSize="34sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="40dp"
        android:minHeight="40dp"
        android:src="@drawable/submit"
        app:tint="@color/dark_grey" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/arabic_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wlcm"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rectangle_login"
        android:clickable="true"
        android:elevation="4dp"
        android:translationZ="8dp"
        app:cardCornerRadius="9dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagear"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/selected"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="العربية"
                android:textColor="@color/dark_grey"
                android:textSize="18sp"

                />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <View
        android:id="@+id/bb"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/arabic_card"
        android:background="@color/browser_actions_bg_grey"

        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/francais_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bb"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/rectangle_login"
        android:clickable="true"
        android:elevation="4dp"
        android:translationZ="8dp"
        app:cardCornerRadius="9dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagefr"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/nselected"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="français"
                android:textColor="@color/dark_grey"
                android:textSize="18sp"

                />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>