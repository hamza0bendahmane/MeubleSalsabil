<?xml version="1.0" encoding="utf-8"?>
 <com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="5dp"
    android:orientation="horizontal"
        android:id="@+id/name_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/rectangle_login"
        android:clickable="true"
    app:cardElevation="10dp"
        android:translationZ="8dp"
        app:cardCornerRadius="9dp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:padding="2dp">

            <ImageView
                android:id="@+id/im3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_dialog_info"
                app:tint="@color/gold"

                />

            <TextView
                android:id="@+id/text_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="9dp"
                android:layout_toStartOf="@id/imicon"
                android:layout_toEndOf="@id/im3"
                android:text="hghgh@emem.com"
                android:textColor="@color/gold"
                android:textSize="18sp"
                android:textStyle="bold"

                />

            <LinearLayout
                android:id="@+id/imicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@id/image_product"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الإسم :"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/materials"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0556765919"
                    android:textColor="@color/dark_grey"
                    android:textSize="18sp" />
            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_product"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="9dp"
                android:src="@color/french_beige"
                app:civ_border_color="@color/dark_grey"
                app:civ_border_width="2dp"

                />

            <RelativeLayout
                android:id="@+id/edit_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imicon"
                android:layout_marginVertical="5dp"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/mail_tool"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/email" />

                    <ImageView
                        android:id="@+id/phone_tool"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginHorizontal="40dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/phone"

                        />

                    <ImageView
                        android:id="@+id/block_tool"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginHorizontal="5dp"
                        android:clickable="true"
                        android:elevation="2dp"
                        android:focusable="true"
                        android:src="@drawable/block"
                        android:textColor="@color/white"
                        android:translationZ="3dp"
                        app:cornerRadius="10dp"

                        />
                </LinearLayout>


            </RelativeLayout>
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
