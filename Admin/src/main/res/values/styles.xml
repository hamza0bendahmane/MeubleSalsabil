<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TextInput Style-->
    <style name="Widget.MeublesSalsabil.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">
            @style/TextAppearance.MeublesSalsabil.TextInputLayout.HintText</item>>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="TextAppearance.MeublesSalsabil.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!--Material Button Style1-->
    <style name="Widget.MeublesSalsabil.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <!--Material Button Style1-->
    <style name="Widget.MeublesSalsabil.OutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/facebook_blue</item>
        <item name="strokeColor">@color/facebook_blue</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <!--Material Button Style3 (Flat)-->
    <style name="Widget.MeublesSalsabil.LangButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/cairo_french</item>
        <item name="android:textColor">@color/facebook_blue</item>
    </style>

    <!--Material Button Style4 (Flat)-->
    <style name="Widget.MeublesSalsabil.FlatButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/cairo_french</item>
        <item name="minWidth">0dp</item>
        <item name="minHeight">0dp</item>
    </style>

    <!--font section-->
    <style name="FontUltra">
        <item name="android:fontFamily">@font/cairo_french</item>
    </style>

    <style name="FontUltraBold">
        <item name="android:fontFamily">@font/cairo_french</item>
    </style>

    <style name="FontLang">
        <item name="android:fontFamily">@font/cairo_french</item>
    </style>

    <style name="FontLangBold">
        <item name="android:fontFamily">@font/cairo_french</item>
    </style>

    <style name="FontNumbers">
        <item name="fontFamily">@font/so_balt</item>
    </style>

    <style name="Widget.SplashScreenTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>