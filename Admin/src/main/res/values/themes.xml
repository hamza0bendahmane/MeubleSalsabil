<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeublesSalsabil" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryVariant">@color/mode_beige</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/french_beige</item>
        <item name="colorSecondaryVariant">@color/bluesp</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="text_font">
        <item name="android:fontFamily">@font/cairo_french</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>
</resources>