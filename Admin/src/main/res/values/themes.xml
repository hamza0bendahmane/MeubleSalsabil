<resources>
    <style name="Theme.MeublesSalsabil" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryVariant">@color/mode_beige</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/french_beige</item>
        <item name="colorSecondaryVariant">@color/dark_grey</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gold</item>

        <!-- Customize your theme here. -->
    </style>

    <!--Splash theme-->
    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/white</item>

    </style>
    <style name="text_font">
        <item name="android:fontFamily">@font/ultra_arabic</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>