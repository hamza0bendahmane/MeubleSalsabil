<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <!--Change current icons with textless ones-->

    <Button
        android:id="@+id/home"
        style="@style/Widget.MeublesSalsabil.FlatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/g226"
        app:iconGravity="textTop"
        app:iconSize="40dp"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/favourite"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/favourite"
        style="@style/Widget.MeublesSalsabil.FlatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/g2207"
        app:iconGravity="textTop"
        app:iconSize="40dp"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/home"
        app:layout_constraintStart_toEndOf="@id/shoplist"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/shoplist"
        style="@style/Widget.MeublesSalsabil.FlatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/g2358"
        app:iconGravity="textTop"
        app:iconSize="40dp"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/favourite"
        app:layout_constraintStart_toEndOf="@id/settings"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/settings"
        style="@style/Widget.MeublesSalsabil.FlatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/g2615"
        app:iconGravity="textTop"
        app:iconSize="40dp"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/shoplist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>